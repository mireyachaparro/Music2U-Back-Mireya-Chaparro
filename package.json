        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "eslint": "^8.25.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "jest": "^29.1.2",
        "jest-ts-webcompat-resolver": "^1.0.0",
        "supertest": "^6.3.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.4"
    },
    "babel": {
        "env": {

        "dev": "run-p build:dev start:dev"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "prettier": {
        "singleQuote": true
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "debug": "^4.3.4",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^8.5.1",
        "jwt-decode": "^3.1.2",
        "mongoose": "^6.7.2",
        "morgan": "^1.10.0",
        "npm-run-all": "^4.1.5",
        "serve-favicon": "^2.5.0"
    },
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.18.6",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.12",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.2.2",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.3",
